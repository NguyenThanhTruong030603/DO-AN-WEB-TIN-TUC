    <script src="https://cdn.tiny.cloud/1/775vsk249tgjs1p0p4wj08rqce8difgcnrm7q1i2falkiypg/tinymce/6/tinymce.min.js"
    referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: '#content',
        plugins: 'image link lists',
        toolbar: 'undo redo | formatselect | bold italic | alignleft aligncenter alignright | bullist numlist outdent indent | link image',
        menubar: false,
        images_upload_url: '/upload-image', // API upload ·∫£nh
        automatic_uploads: true, // T·ª± ƒë·ªông upload ·∫£nh
        images_upload_handler: function (blobInfo, success, failure) {
            let formData = new FormData();
            formData.append('upload', blobInfo.blob()); // G·ª≠i file ·∫£nh

            fetch('/upload-image', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => success(data.url)) // Nh·∫≠n URL v√† ch√®n v√†o b√†i vi·∫øt
                .catch(() => failure('L·ªói upload ·∫£nh'));
        }
    });

    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector("form").addEventListener("submit", function (event) {
            tinymce.triggerSave(); // ƒê·ªìng b·ªô TinyMCE v·ªõi textarea
            let content = document.getElementById('content').value.trim();

            if (!content) {
                alert("Vui l√≤ng nh·∫≠p n·ªôi dung b√†i vi·∫øt!"); // Hi·ªÉn th·ªã c·∫£nh b√°o
                event.preventDefault(); // NgƒÉn form g·ª≠i ƒëi
            }
        });
    });
</script>
