</head>
<body>
    <%- include('partial/userParticle') %>
   

<div class="container-fluid pt-3">
    <div class="container animate-box" data-animate-effect="fadeIn">
        
    </div>
</div>
<div class="container-fluid pb-4 pt-5">
    <div class="container animate-box">
        
</div>
<div class="container-fluid fh5co_video_news_bg pb-4">
    <div class="container animate-box" data-animate-effect="fadeIn">
        
    </div>
</div>

<div class="container-fluid pb-4 pt-4 paddding">
    <div class="container paddding">
        <div class="row mx-0">
            <div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4"><%= category.name %></div>
                </div>
                <div class="row pb-4">
                    <% if (articles.length === 0) { %>
                        <p>Không có bài viết nào trong danh mục này.</p>
                    <% } else { %>
                        <div class="row">
                            <% articles
                                .sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)) // Sắp xếp bài viết theo ngày mới nhất
                                .forEach(article => { 
                            %>
                            <div class="row pb-4">
                                <div class="col-md-5">
                                    <div class="fh5co_hover_news_img">
                                        <div class="fh5co_news_img">
                                            <img src="<%= article.image %>" alt="<%= article.title %>" loading="lazy"/>
                                        </div>
                                        <div></div>
                                    </div>
                                </div>
                                <div class="col-md-7 animate-box">
                                    <a href="/articles/<%= article._id %>" class="fh5co_magna py-2">
                                        <%= article.title %>
                                    </a> 
                                    <p>
                                        <a href="/articles/<%= article._id %>" class="fh5co_mini_time py-3">
                                            <%= article.author ? article.author.username : "Không rõ tác giả" %> - 
                                            <%= new Date(article.createdAt).toLocaleDateString("vi-VN", { year: "numeric", month: "long", day: "numeric" }) %>
                                        </a>
                                    </p>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    <% } %>
                
                </div>
                
            </div>
            <div class="col-md-3 animate-box" data-animate-effect="fadeInRight">
               
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom pt-3 py-2 mb-4">Most Popular</div>
                </div>
                <div class="row pb-3">
                    <% articles .sort((a, b)=> new Date(b.createdAt) - new Date(a.createdAt)) 
                                    .slice(0, 10) 
                                    .forEach(article => {
                                    %>
                                    <div class="row pb-3">
                                        <div class="col-5 align-self-center">
                                            <img src="<%= article.image %>" alt="<%= article.title %> loading="lazy""
                                                class="fh5co_most_trading" />
                                        </div>
                                        <div class="col-7 paddding">
                                            <div class="most_fh5co_treding_font">
                                                <a href="/articles/<%= article._id %>">
                                                    <%= article.title %>
                                                </a>
                                            </div>
                                            <div class="most_fh5co_treding_font_123">
                                                <%= new Date(article.createdAt).toLocaleDateString("vi-VN", {
                                                    year: "numeric" , month: "long" , day: "numeric" }) %>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                </div>
               
            </div>
        </div>
        <div class="row mx-0 animate-box" data-animate-effect="fadeInUp">
            <div class="col-12 text-center pb-4 pt-4">
                <a href="#" class="btn_mange_pagging"><i class="fa fa-long-arrow-left"></i>&nbsp;&nbsp; Previous</a>
                <a href="#" class="btn_pagging">1</a>
               
                <a href="#" class="btn_mange_pagging">Next <i class="fa fa-long-arrow-right"></i>&nbsp;&nbsp; </a>
             </div>
        </div>
    </div>
</div>
<%- include('partial/footerParticle') %>

