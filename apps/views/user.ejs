<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách người dùng</title>
</head>
<body>
    <%- include('partial/menu') %>
    <h1>Danh sách người dùng</h1>
    <a href="/add">Thêm người dùng</a>
    <table border="1">
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Hành động</th>
        </tr>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td>
                    <a href="/edit/<%= user._id %>">Sửa</a>
                    <form action="/delete/<%= user._id %>" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?')">Xóa</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
